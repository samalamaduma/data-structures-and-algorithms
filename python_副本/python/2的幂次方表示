lst = ["(0)", "", "(2)", "(2+2(0))", "(2(2))", "(2(2)+2(0))", "(2(2)+2)", "(2(2)+2+2(0))", "(2(2+2(0)))", \
       "(2(2+2(0))+2(0))", "(2(2+2(0))+2)", "(2(2+2(0))+2+2(0))", "(2(2+2(0))+2(2))", "(2(2+2(0))+2(2)+2(0))" \
        ,"(2(2+2(0))+2(2)+2)"]
n = int(input())
binn = bin(n)[2:]
lst2 = list(binn)
lst2.reverse()
l = len(lst2)
answer = []
for i in range(l):
    if lst2[i] == "1":
        answer.insert(0, "2{}".format(lst[i]))
print("+".join(answer))